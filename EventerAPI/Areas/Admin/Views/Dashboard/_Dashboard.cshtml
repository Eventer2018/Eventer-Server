<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>


    @Styles.Render("~/Content/themes/admin/css")

</head>
<body>
  <header></header>
  <div id="wrapper">
    <nav class="navbar-default navbar-static-side">
        <ul class="nav metismenu">
            <li class="nav-header">
                <img class="logo" src="/images/eventer_logo_intro.png"/>
                <h2 class="font-bold no-margins">Eventer</h2>
            </li>
            <li><a href="@Url.Action("Index","Dashboard")"><i class="fa fa-th-large"></i> <span class="nav-label">Dashboard</span> <span class="fa arrow"></span></a></li>
            <li><a href="@Url.Action("Users","Dashboard")"><i class="fa fa-th-large"></i> <span class="nav-label">Users</span> <span class="fa arrow"></span></a></li>
            <li><a href="@Url.Action("Notifications","Dashboard")"><i class="fa fa-th-large"></i> <span class="nav-label">Push</span> <span class="fa arrow"></span></a></li>                   
        </ul>
    </nav>
  </div>
  <div id="page-wrapper" class="gray-bg">
      <div class="row wrapper border-bottom white-bg page-heading">
            <div class="col-lg-9">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="col-lg-3">
                <div class="title-action">
                    <a href="@Url.Action("Logout","Login")" class="btn btn-primary">Log Out</a>
                </div>
            </div>
      </div>
      <div class="wrapper wrapper-content animated fadeInRight">
        @RenderBody()
      </div>  
  </div>
</body>
</html>
